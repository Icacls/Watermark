{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "node": false,
        "jest": true
    },
    "rules": {
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-mixed-operators": ["warn"],
        "prefer-template": ["warn"],
        "comma-dangle": ["warn"]
    }
}